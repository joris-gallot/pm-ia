{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ESNext.Collection"],
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["../common/src/*"]
    },
    "outDir": "./dist"
  },
  "include": ["**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "dist"]
}
