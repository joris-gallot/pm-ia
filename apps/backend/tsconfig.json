{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@common/*": ["../common/src/*"]
    },

    "types": ["node"],
    "inlineSources": true,
    "outDir": "./dist",
    "sourceMap": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "exclude": ["node_modules", "dist"]
}
